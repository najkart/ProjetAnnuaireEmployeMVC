@model AnnuaireEmploye.Models.ViewModels.SearchViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New", "Create", "Employes", new { @class = "btn btn-primary" })

@using (Html.BeginForm())
{

    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Matricule:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBox("Matricule", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Nom:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBox("NomComplet", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="row col-md-4">
        @Html.LabelFor(model => model.IdPoste, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">

            @Html.DropDownListFor(model => model.IdPoste, Model.Postes,"Please select", new { @class = "form-control" })
       
        </div>
    </div>

    <div class="row col-md-4">
        @Html.LabelFor(model => model.IdDepartement, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">

            @Html.DropDownListFor(model => model.IdDepartement, Model.Departements, "Please select",new { @class = "form-control" })
          
        </div>
    </div>

    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Date d'embauche:</label>
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.DateEmbauche, new { htmlAttributes = new { @class = "form-control" } })
          
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Actif:</label>
        </div>
        <div class="col-md-4 checkbox">
            @Html.EditorFor(model => model.Actif)
        </div>
    </div>


    <div class="col-md-4">
        <input class="btn btn-primary" type="submit" value="Filter" /><br /> <br />
    </div>

}







<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employe.NomComplet)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Matricule)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Poste.NomPoste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Departement.NomDepartement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.DateEmbauche)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Actif)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Ville)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Telephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomComplet)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricule)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poste.NomPoste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departement.NomDepartement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEmbauche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEmploye }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
