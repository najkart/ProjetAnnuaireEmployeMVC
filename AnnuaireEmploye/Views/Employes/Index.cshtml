@model AnnuaireEmploye.Models.ViewModels.CreateViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New", "Create", "Employes", new { @class = "btn btn-primary" })

@using (Html.BeginForm())
{

    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Matricule:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBox("Matricule", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Nom:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBox("Name", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Poste:</label>
        </div>
        <div class="col-md-4">
            @Html.DropDownList("IdPoste", null, "", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Departement:</label>
        </div>
        <div class="col-md-4">
            @Html.DropDownList("IdDepartement", null, "", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Date d'embauche:</label>
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Actif:</label>
        </div>
        <div class="col-md-4 checkbox">
            @*@Html.TextBox("Actif", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.EditorFor(model => model.Actif)
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.Actif, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Actif)
                @Html.ValidationMessageFor(model => model.Actif, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>*@


    @*<div class="row col-md-4">
        <div class="col-md-4">
            <label>Poste: </label>
        </div>
        <div class="col-md-8">
            @Html.DropDownList("IdPoste", null, htmlAttributes: new { @class = "form-control" })
            </div>

        </div>*@

    <div class="col-md-4">
        <input class="btn btn-primary" type="submit" value="Filter" /><br /> <br />
    </div>

}







<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.NomComplet)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Matricule)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Poste.NomPoste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Departement.NomDepartement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.DateEmbauche)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Actif)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Ville)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BindingLabel.Telephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomComplet)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricule)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poste.NomPoste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departement.NomDepartement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEmbauche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEmploye }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
