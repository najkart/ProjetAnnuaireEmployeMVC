@model IEnumerable<AnnuaireEmploye.Models.Employe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New", "Create", "Employes", new { @class = "btn btn-primary" })

@using (Html.BeginForm())
{

    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Matricule:</label>
        </div>

        <div class="col-md-8">
            @Html.TextBox("SearchMatricule", null, htmlAttributes: new { @class = "form-control" })

        </div>
    </div>

    <div class="row col-md-4">
        <div class="col-md-4">
            <label>Poste: </label>
        </div>
        <div class="col-md-8">
            @Html.DropDownList("IdPoste", null, htmlAttributes: new { @class = "form-control" })
            </div>

        </div>

        <div class="col-md-4">
            <input class="btn btn-primary" type="submit" value="Filter" /><br /> <br /> 
        </div>
        
        }







        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomComplet)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Matricule)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Poste.NomPoste)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departement.NomDepartement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEmbauche)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Actif)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ville)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomComplet)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricule)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Poste.NomPoste)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departement.NomDepartement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateEmbauche)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actif)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ville)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdEmploye }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdEmploye }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
